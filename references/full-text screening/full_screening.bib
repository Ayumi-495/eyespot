@article{rayyan-514139956,
  title={The effects of a tranquilliser on the reactions of domestic chicks to an aversive eye-like shape},
  year={1979},
  journal={IRCS Medical Science},
  volume={7},
  number={10},
  pages={504},
  author={Jones, R.B.},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-0018363474&partnerID=40&md5=9dbabca209c00e6729190020f0689555},
  abstract={Domestic chicks show fear and avoidance of certain monochromatic, two-dimensional eye-like shapes. The tranquilliser Pacitran (CIBA) will reduce fear-induced sterotypies an adult fowl and alleviate fear of a novel environment and startling stimulus (loud bell) in chicks (unpublished observation). The author tested whether fear and avoidance of the eye-shape could be reduced by the administration of Pacitran. Two hours before testing, each chick was injected subcutaneously with either 0.1 ml purified water (control group) or with 50 μg Pacitran in 0.1 ml water (approximately equivalent to 1.2 mg/kg body weight. Pacitran (Ciba) is a solution of methyl-18-epi-O-methylreserpate hydrochloride; it is a reserpine derivative and therefore a tranquilliser of rauwolfia-alkaloid type. Each chick was tested individually and once only; it was placed on an imaginary mid-line of the test box facing the eye model. Testing was carried out between 10.00 and 14.00 h; the order of testing was randomised and the box was turned between tests to reduce positional cues. Avoidance was evaluated by the accumulated time spent in each half of the box, 450 seconds in each half would indicate no avoidance. Immobility (freezing, sitting, lying, eye-closure), which is positively related to fear was decreased, while activity (steps, jumps) and vocalisation, which are inversely related to fear were enhanced by Pacitran. Chicks from both treatment groups avoided the eyeshape (P < 0.001; t test) but aversion was markedly stronger in the water-injected group. Thus, tranquillisation reduced fear and avoidance of the eye model.},
