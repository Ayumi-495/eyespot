}

@article{rayyan-514139953,
  title={Prey survival by predator intimidation: an experimental study of peacock butterfly defence against blue tits},
  year={2005},
  month={6},
  journal={PROCEEDINGS OF THE ROYAL SOCIETY B-BIOLOGICAL SCIENCES},
  issn={["0962-8452", "1471-2954     J9  - P ROY SOC B-BIOL SCI     JI  - Proc. R. Soc. B-Biol. Sci."]},
  volume={272},
  number={1569},
  pages={1203-1207},
  author={Vallin, A and Jakobsson, S and Lind, J and Wiklund, C},
